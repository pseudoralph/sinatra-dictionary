<div class="card definition">
  <h5 class="card-header"><%= @definition.word.capitalize %></h5>
  <div class="card-body">

    <div class="row">
      <div class="col-md-2">
        <% def_label= (@definition.definitions.length > 1) ? "Definitions" : "Definition" %>
        <label><%= def_label %>: </label>
      </div>

      <div class="col-md-10">
        <ul>
          <% @definition.definitions.each do |definition| %>
          <li><%= definition %></li>
          <% end %>
        </ul>

        <form action="/definition/<%= @definition.word_id %>/add_definition" method="post">
          <div class="form-group">

            <textarea name="definition" name="definitions" class="form-control" rows="4" cols="80" required></textarea>

          </div>
          <button type="submit" name="button" class="btn btn-success">Add definition</button>
        </form>
      </div>

    </div>

  </div>
</div>

<div class="go_back">
  <a href="/definition/<%= @definition.word_id %>" class="float-left">⬅️ go back</a>
</div>
