<div class="card add_definition">
  <h5 class="card-header"><%= @definition.word.capitalize %></h5>
  <div class="card-body">

    <div class="row">
      <div class="col-md-2">
        <label>Definition: </label>

      </div>

      <div class="col-md-10">
        <ol>
          <% @definition.definitions.each do |definition| %>
          <li><%= definition %></li>
          <% end %>
        </ol>

        <form action="/definition/<%= @definition.word_id %>/add_definition" method="post">
          <div class="form-group">

            <textarea name="definition" name="definitions" class="form-control" rows="4" cols="80" required></textarea>

          </div>
          <button type="submit" name="button" class="btn btn-success">Add definition</button>
        </form>


      </div>

    </div>

  </div>
</div>

<div class="go_back">
  <a href="/definition/<%= @definition.word_id %>" class="float-left">⬅️ return</a>
</div>
