<div class="card definition">
  <h5 class="card-header"><%= @definition.word.capitalize %></h5>
  <div class="card-body">

    <div class="row">
      <div class="col-md-2">
        <label>Definition: </label>
      </div>

      <div class="col-md-10">
        <ul>
          <% @definition.definitions.each do |definition| %>
          <li><%= definition %></li>
          <% end %>
        </ul>
      </div>


    </div>

    <div class="go_back">

      <a href="/definition/<%= @definition.word_id %>/add_definition" class="float-left">➕ add another definition</a>
    </div>

  </div>
</div>

<div class="go_back">
  <a href="/dictionary" class="float-left">⬅️ go back</a>
</div>
