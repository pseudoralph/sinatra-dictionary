<div class="card definition">
  <h5 class="card-header"><%= @definition.word.capitalize %></h5>
  <div class="card-body">

    <div class="row">

      <% if @definition.definitions.length > 0
        button_text = "add another definition"
        else
        button_text = "add a definition"
      end %>

      <div class="col-md-2">

        <% plural_defs_label= @definition.definitions.length > 1 ? "Definitions: " : (@definition.definitions.length == 0 ? "" : "Definition: ") %>
        <label><%= plural_defs_label %></label>
      </div>

      <div class="col-md-10">
        <ul>
          <% @definition.definitions.each do |definition| %>
          <li><%= definition %></li>
          <% end %>
        </ul>
      </div>

    </div>

    <div class="go_back">
      <a href="/definition/<%= @definition.word_id %>/add_definition" class="float-left">➕ <%= button_text %></a>
    </div>
  </div>
</div>

<div class="go_back">
  <a href="/dictionary" class="float-left">⬅️ go back</a>
</div>
